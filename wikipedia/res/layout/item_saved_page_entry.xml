<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <org.wikipedia.styledviews.StyledTextView android:id="@+id/saved_page_section_header_text"
              android:layout_width="match_parent"
              android:layout_height="32dp"
              android:gravity="center_vertical"
              android:padding="8dp"
              android:visibility="gone"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/activatedBackgroundIndicator"
            >
        <ImageView android:layout_width="16dp" android:layout_height="16dp"
                   android:id="@+id/saved_page_source"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="8dp"
                   android:layout_marginStart="8dp"
                />
        <ImageView
                android:id="@+id/saved_page_thumbnail"
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                />

        <org.wikipedia.styledviews.StyledTextView
                android:id="@+id/saved_page_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                style="?android:textAppearanceMedium"
                />

    </LinearLayout>
</LinearLayout>