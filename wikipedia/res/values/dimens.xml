<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="corner_radius">4dp</dimen>

    <dimen name="corner_radius_smaller">2dp</dimen>

    <!-- Default font size for WebView text based on system settings -->
    <dimen name="textSize">16sp</dimen>

    <!-- Default height of list items -->
    <dimen name="defaultListItemSize">72dp</dimen>

    <!-- Default height of tab item images, which governs the size of tabs themselves -->
    <dimen name="tabImageSize">32dp</dimen>

    <!-- Default width of the lead image to be downloaded -->
    <dimen name="leadImageWidth">640dp</dimen>
    <!-- Default font size of the page title -->
    <dimen name="titleTextSize">28sp</dimen>
    <!-- Default font size of the Wikidata description for the page -->
    <dimen name="descriptionTextSize">14sp</dimen>

    <!-- Default font size for Search text -->
    <dimen name="searchTextSize">16sp</dimen>

    <dimen name="content_margin">@dimen/activity_horizontal_margin</dimen>

    <dimen name="drawer_drag_margin">16dp</dimen>

    <!--
        Onboarding screen
    -->
    <dimen name="onboarding_wp_globe">144dp</dimen>
    <!--
        The next two are text sizes but since they need to correspond
        to the logo image the dimensions are given in dp instead of sp.
    -->
    <dimen name="onboarding_wp_logo_text" tools:ignore="SpUsage">26dp</dimen>
    <dimen name="onboarding_wp_logo_subtext" tools:ignore="SpUsage">13dp</dimen>

    <!--
        ToC Intro
    -->
    <dimen name="toc_intro_image_size">48dp</dimen>
    <dimen name="toc_intro_image_marginTop">8dp</dimen>
    <dimen name="toc_intro_image_marginBottom">8dp</dimen>

</resources>
