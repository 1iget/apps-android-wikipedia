<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="12dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/view_card_header_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_restore_black_24dp"
                android:tint="@android:color/white"
                android:background="@drawable/shape_circle"
                app:backgroundTint="@color/blue_liberal"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/view_card_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Lorem ipsum"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/view_card_header_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textSize="12sp"
                tools:text="Lorem ipsum"/>

            <ImageView
                android:id="@+id/view_list_card_header_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/ic_more_vert_white_24dp"
                android:tint="@color/gray_highlight"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"/>

        </LinearLayout>

    </LinearLayout>

</merge>
