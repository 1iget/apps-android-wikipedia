<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/view_wiki_error_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="24dp"
        app:srcCompat="@drawable/ic_error_black_24dp"
        android:tint="@color/view_wiki_error_icon_tint"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/view_wiki_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message_generic"
        android:textColor="@color/view_wiki_error_text_color"
        android:textSize="16sp" />

    <TextView
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/view_wiki_error_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:text="@string/page_error_back_to_main"
        android:minHeight="36dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/view_wiki_error_text_color"/>
</merge>
