<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:layout_width="match_parent"
    tools:layout_height="@dimen/list_item_default_height"
    tools:background="?attr/paper_color">

    <TextView
        android:id="@+id/wiki_language_order"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        tools:text="1"/>

    <CheckBox
        android:id="@+id/wiki_language_checkbox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="-8dp"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/wiki_language_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="2dp"
        android:gravity="center_vertical"
        style="@style/MaterialListTitle"
        tools:text="Lorem ipsum"/>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/wiki_language_drag_handle"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_reorder_black_24dp"
        android:scaleType="center"
        app:tint="?attr/material_theme_de_emphasised_color"
        android:contentDescription="@null"/>

</merge>
