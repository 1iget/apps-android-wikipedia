<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeLight">

        <!-- Overrides of base Android color definitions -->
        <item name="android:windowBackground">@color/base90</item>
        <item name="android:colorBackground">@color/base90</item>
        <item name="android:textColorPrimary">@color/base10</item>
        <item name="android:textColorSecondary">@color/base20</item>
        <item name="android:textColorTertiary">@color/base30</item>
        <item name="android:textColorHint">@color/base50</item>
        <item name="colorPrimary">@color/accent50</item>
        <item name="colorAccent">@color/accent50</item>
        <item name="textColorError">@color/red50</item>

        <!-- Overrides of base Android styles with color sub-definitions -->
        <item name="popupMenuStyle">@style/PopupMenuLight</item>
        <item name="dialogTheme">@style/DialogLight</item>
        <item name="alertDialogTheme">@style/AlertDialogLight</item>

        <!-- Overrides of our own custom style attributes -->
        <item name="toc_item_background">@drawable/toc_item_background_light</item>
        <item name="edit_improve_tag_selected_drawable">@drawable/edit_improve_tag_selected_light</item>
        <item name="edit_improve_tag_unselected_drawable">@drawable/edit_improve_tag_unselected_light</item>
        <item name="lead_image_drawable">@drawable/lead_default</item>
        <item name="list_separator_drawable">@drawable/divider_light</item>
        <item name="tab_item_selector">@drawable/tab_item_selector_light</item>
        <item name="tab_shadow_drawable">@drawable/tab_item_bottom_gradient_light</item>
        <item name="blue_switch">@style/BlueSwitchLight</item>

        <!-- Overrides of our own custom color attributes -->
        <item name="window_background_color">@color/base90</item>
        <item name="window_inverse_color">@color/base10</item>
        <item name="page_background_color">@color/base100</item>
        <item name="main_toolbar_color">@color/accent50</item>
        <item name="main_status_bar_color">@color/accent30</item>
        <item name="inline_onboarding_background_color">@color/base80</item>
        <item name="toc_background_color">@android:color/white</item>
        <item name="toc_section_text_color">@color/base10</item>
        <item name="toc_subsection_text_color">@color/base30</item>
        <item name="edit_text_color">@color/base0</item>
        <item name="abusefilter_background_color">@color/base80</item>
        <item name="page_title_color">@color/base0</item>
        <item name="page_description_color">@color/base30</item>
        <item name="list_separator_color">@color/black12</item>
        <item name="syntax_highlight_template_color">@color/black54</item>
        <item name="tab_shadow_color">@color/black26</item>
        <item name="bottom_sheet_background_color">@color/base90</item>

        <item name="link_preview_offline_text_color">@color/black54</item>
        <item name="list_item_text_primary_color">@color/black87</item>
        <item name="list_item_text_secondary_color">@color/base30</item>
        <item name="page_header_edit_pencil_alpha">0.55</item>
        <item name="offline_library_background_color">@color/base80</item>
        <item name="nav_tab_background_color">@android:color/white</item>
        <item name="nav_tab_item_color_state">@color/color_state_nav_tab_light</item>
        <item name="overflow_button">@color/black38</item>
        <item name="multi_select_background_color">@color/accent90</item>
        <item name="feed_text_secondary_color">@color/base20</item>
        <item name="feed_window_background_color">@color/base80</item>
        <item name="feed_text_primary_color">@color/base10</item>
        <item name="searchItemBackground">@color/base100</item>
        <item name="cardBackgroundColor">@color/base100</item>
        <item name="header_edit_button">@style/HeaderEditButtonLight</item>
        <item name="edit_preview_color">@color/accent50</item>
        <item name="horizontal_divider">@style/HorizontalDividerLight</item>
        <item name="cardHearderBackground">@color/base70</item>
        <item name="dividerColor">@color/white20</item>
        <item name="hintTextColor">@color/black38</item>
        <item name="listSeparatorColor">@color/black12</item>
        <item name="feedImageBorderColor">@color/black12</item>
        <item name="bottom_sheet_text_color">@color/base10</item>
        <item name="menu_icon_color">@color/black54</item>
        <item name="bottom_sheet_secondary_text_color">@color/black54</item>
        <item name="card_hearder_text_color">@color/base20</item>
        <item name="text_secondary_color">@color/base30</item>
        <item name="link_color">@color/accent50</item>
        <item name="material_primary_color">@color/black87</item>
        <item name="material_secondary_color">@color/black54</item>

    </style>

    <style name="AlertDialogLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent50</item>
    </style>

    <style name="DialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/accent50</item>
    </style>

    <style name="PopupMenuLight" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="BlueSwitchLight">
        <item name="colorControlActivated">@color/base90</item>
        <item name="colorSwitchThumbNormal">@color/base90</item>
        <item name="android:colorForeground">@color/base30</item>
        <item name="trackTint">@color/base70</item>
        <item name="trackTintMode">src_in</item>
    </style>

    <style name="HorizontalDividerLight">
        <item name="android:background">@color/base0</item>
        <item name="android:alpha">0.12</item>
    </style>

    <style name="HeaderEditButtonLight">
        <item name="android:alpha">0.55</item>
    </style>

</resources>
